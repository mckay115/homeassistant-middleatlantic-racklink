{
  "formatOnSave": true,
  "formatOnPaste": true,
  "defaultFormatter": "black",
  "lineLength": 88,
  "tabSize": 4,
  "insertSpaces": true,
  "trimTrailingWhitespace": true,
  "insertFinalNewline": true,
  "pythonPath": "${workspaceFolder}/.venv/bin/python",
  "linters": ["flake8", "pylint", "mypy"],
  "pythonSettings": {
    "linting": {
      "enabled": true,
      "pylintEnabled": true,
      "flake8Enabled": true,
      "mypyEnabled": true
    },
    "formatting": {
      "provider": "black"
    }
  }
} 
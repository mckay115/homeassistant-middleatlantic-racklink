{
  "name": "Python Code Style Rules",
  "description": "Rules for Python code style, focusing on imports and formatting",
  "pattern": "**/*.py",
  "rules": {
    "code_style": {
      "python": {
        "max_line_length": 88,
        "indent_size": 4,
        "use_black": true,
        "use_isort": true,
        "isort_config": {
          "profile": "black",
          "line_length": 88,
          "known_first_party": ["custom_components"],
          "known_third_party": ["homeassistant"],
          "sections": [
            "FUTURE",
            "STDLIB",
            "THIRDPARTY",
            "FIRSTPARTY",
            "LOCALFOLDER"
          ],
          "default_section": "THIRDPARTY",
          "force_grid_wrap": 0,
          "multi_line_output": 3,
          "include_trailing_comma": true,
          "force_alphabetical_sort": true,
          "use_parentheses": true,
          "ensure_newline_before_comments": true
        },
        "docstring_style": "google",
        "import_order": [
          "standard_library",
          "third_party",
          "local"
        ]
      }
    },
    "naming_conventions": {
      "class_names": "PascalCase",
      "function_names": "snake_case",
      "variable_names": "snake_case",
      "constant_names": "UPPER_CASE"
    },
    "documentation": {
      "require_docstrings": true,
      "require_type_hints": true,
      "require_google_style_docstrings": true
    }
  }
} 